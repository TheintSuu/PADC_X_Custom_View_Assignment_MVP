<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:layout_height="165dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding">

            <TextView
                android:id="@+id/tvProgressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="In Progress"
                android:textColor="@color/colorProgress" />

            <TextView
                android:id="@+id/tvProgressType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="#Design"
                android:textColor="#C6C4C4" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact page"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_textsms_24" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:text="3" />

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:src="@drawable/ic_baseline_attach_file_24" />

                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:text="6" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/normal_padding"
                android:paddingRight="@dimen/cardview_compat_inset_shadow"
                android:text="N~165" />

            <com.example.padc_x_custom_view_assignment.views.component.ProfileImageView
                android:id="@+id/ivTaskimage"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/normal_padding"
                android:scaleType="centerCrop"
                android:src="@drawable/yibo" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>